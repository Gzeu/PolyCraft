# Frontend Environment Variables
# Copy this file to .env.local and configure for your setup

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3005

# App Configuration
NEXT_PUBLIC_APP_NAME=PolyCraft
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Multi-Modal Generation Platform"

# Optional: API Authentication
# If your backend requires an API key, set it here
# NEXT_PUBLIC_API_KEY=your_api_key_here

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTAG_ID=GT-XXXXXXXXX

# Optional: Error Monitoring
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
# SENTRY_ORG=your-org
# SENTRY_PROJECT=your-project

# Optional: Feature Flags
# NEXT_PUBLIC_ENABLE_BATCH=true
# NEXT_PUBLIC_ENABLE_HISTORY=false
# NEXT_PUBLIC_ENABLE_COLLABORATION=false

# Development
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development
