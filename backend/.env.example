# Backend Environment Variables
# Copy this file to .env and configure as needed

# API Security
# Set BACKEND_API_KEY to enable authentication for /api/* endpoints
# Leave empty or comment out for open access (development only)
BACKEND_API_KEY=

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=1

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_IMAGE=10
RATE_LIMIT_TEXT=30
RATE_LIMIT_AUDIO=20
RATE_LIMIT_BATCH=5

# Cache Settings (TTL in seconds)
CACHE_TTL_IMAGE=3600
CACHE_TTL_TEXT=300
CACHE_TTL_AUDIO=3600

# CORS Configuration
# For production, specify exact origins
CORS_ORIGINS=http://localhost:3005,https://poly-craft.vercel.app

# Pollinations AI Configuration
POLLINATIONS_IMAGE_URL=https://image.pollinations.ai
POLLINATIONS_TEXT_URL=https://text.pollinations.ai

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEVELOPMENT=true
DEBUG=false
