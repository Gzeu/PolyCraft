# PolyCraft Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# üöÄ PRODUCTION DEPLOYMENT SETTINGS
# =============================================================================

# Frontend Settings (Vercel)
NEXT_PUBLIC_API_URL=https://your-backend-domain.railway.app
NEXT_PUBLIC_APP_URL=https://poly-craft.vercel.app
NEXT_PUBLIC_APP_NAME=PolyCraft
NODE_ENV=production

# Backend Settings (Railway/Render/etc)
BACKEND_API_KEY=polycraft_prod_$(openssl rand -hex 16)_$(date +%s)
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# CORS Configuration (Update with your frontend domain)
ALLOWED_ORIGINS=https://poly-craft.vercel.app,https://your-custom-domain.com

# =============================================================================
# üìä RATE LIMITING & PERFORMANCE
# =============================================================================

# API Rate Limits (requests per minute)
RATE_LIMIT_IMAGE=15        # Image generation
RATE_LIMIT_TEXT=30         # Text generation  
RATE_LIMIT_AUDIO=10        # Audio generation
RATE_LIMIT_BATCH=5         # Batch processing
RATE_LIMIT_GLOBAL=100      # Global per IP

# Cache TTL (Time To Live in seconds)
CACHE_TTL_IMAGE=3600       # 1 hour
CACHE_TTL_TEXT=1800        # 30 minutes
CACHE_TTL_AUDIO=3600       # 1 hour
CACHE_TTL_STATIC=86400     # 24 hours

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
KEEPALIVE_TIMEOUT=5

# =============================================================================
# üîê SECURITY SETTINGS
# =============================================================================

# Security Headers
SECURE_HEADERS=true
HTTPS_ONLY=true
CSRF_PROTECTION=true

# API Authentication (Leave empty for open access)
# NEXT_PUBLIC_API_KEY=same_as_backend_api_key_if_auth_enabled

# =============================================================================
# ü§ñ AI SERVICE CONFIGURATION
# =============================================================================

# Pollinations AI (Default service - no API key needed)
POLLINATIONS_BASE_URL=https://image.pollinations.ai
POLLINATIONS_TEXT_URL=https://text.pollinations.ai
POLLINATIONS_AUDIO_URL=https://audio.pollinations.ai

# Optional: External AI Services (if you want to add them)
# OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# REPLICATE_API_KEY=your-replicate-key

