# PolyCraft Environment Configuration
# Copy this file to .env and fill in your values

# Backend Configuration
BACKEND_API_KEY=your_secret_api_key_here_or_leave_empty_for_open_access
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Rate Limiting (requests per minute)
RATE_LIMIT_IMAGE=10
RATE_LIMIT_TEXT=30
RATE_LIMIT_AUDIO=20
RATE_LIMIT_BATCH=5

# Cache Configuration
CACHE_TTL_IMAGE=3600
CACHE_TTL_TEXT=300
CACHE_TTL_AUDIO=3600

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3005,https://poly-craft.vercel.app

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3005
NEXT_PUBLIC_APP_NAME=PolyCraft

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Development
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
